@model Dictionary<string, int>

<section>
    <h2>Categories</h2>
    @if(Model.Count > 0)
    {
        <ul>
            @{ 
                foreach(var category in Model)
                {
                    var linkText = $"{category.Key} - ({category.Value})";
                    <li><h4><a asp-controller="Post" asp-action="ViewCategory" asp-route-category="@category.Key">@linkText</a></h4></li>
                }
            }
        </ul>
    }
</section>